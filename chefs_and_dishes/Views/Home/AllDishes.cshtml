@model List<Dish>

@{
    ViewData["Title"] = "Home Page";
}



<div class="text-center">
    <h1 class="display-4">Take a look at these tasty dishes!</h1>
    <div class="col-sm-6 mx-auto mx-auto">
        <div class="card" >
                <div class="card-body">
                    <table class="table table-striped">
                        @foreach(var dish in Model)
                        {
                            <tr>
                                <td>
                                    @dish.DishName
                                </td>
                                <td>
                                    @dish.Creator.FirstName 
                                </td>
                                <td>
                                    @dish.Creator.LastName
                                </td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
</div>