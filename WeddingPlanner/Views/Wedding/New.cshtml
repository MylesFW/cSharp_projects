@model Wedding

<div class="w-25 mx-auto bg-light p-5 rounded">
  <h2 class="text-center">Share a New Wedding</h2>

  <form asp-controller="Wedding" asp-action="Create" method="POST">
    <div class="form-group">
      <label asp-for="WedderOne">Your Name</label>
      <span asp-validation-for="WedderOne" class="text-danger font-weight-bold"></span>
      <input asp-for="WedderOne" class="form-control" />
    </div>

    <div class="form-group">
      <label asp-for="WedderTwo">Fianc√© Name</label>
      <span asp-validation-for="WedderTwo" class="text-danger font-weight-bold"></span>
      <input asp-for="WedderTwo" class="form-control"/>
    </div>

    <div class="form-group">
      <label asp-for="Date"></label>
      <span asp-validation-for="Date" class="text-danger font-weight-bold"></span>
      <input asp-for="Date" class="form-control" />
    </div>

    <div class="form-group">
      <label asp-for="Address"></label>
      <span asp-validation-for="Address" class="text-danger font-weight-bold"></span>
      <input asp-for="Address" class="form-control" />
    </div>

    <button class="btn btn-sm btn-success">Submit</button>
  </form>
</div>